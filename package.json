{
  "name": "hayase",
  "version": "6.4.8",
  "description": "Hayase - Torrent streaming made simple",
  "main": "./out/main/index.js",
  "repository": "github:hayase-app/ui",
  "author": "ThaUnknown_",
  "homepage": "https://hayase.app",
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:publish": "npm run build && electron-builder -p always",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@paymoapp/electron-shutdown-handler": "^1.1.2",
    "rollup-plugin-license": "^3.6.0",
    "utp-native": "^2.5.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@types/node": "^22.13.4",
    "@xhayper/discord-rpc": "^1.2.1",
    "abslink": "^1.1.0",
    "bittorrent-peerid": "^1.3.6",
    "electron": "32.1.1",
    "electron-builder": "^25.1.8",
    "electron-log": "^5.3.2",
    "electron-updater": "^6.3.9",
    "electron-vite": "^3.0.0",
    "eslint-config-standard-universal": "^1.0.8",
    "matroska-metadata": "^1.0.7",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3",
    "vite": "^6.2.5",
    "vite-plugin-cjs-interop": "^2.2.0",
    "webtorrent": "^2.6.10"
  },
    "pnpm": {
    "overrides": {
      "webtorrent": "github:thaunknown/webtorrent",
      "bittorrent-protocol": "github:thaunknown/bittorrent-protocol"
    }
  }
}
