{
  "name": "hayase",
  "version": "6.4.52",
  "description": "Hayase - Torrent streaming made simple",
  "main": "./out/main/index.js",
  "repository": "github:hayase-app/ui",
  "author": "ThaUnknown_",
  "homepage": "https://hayase.app",
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false --noEmit",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false --noEmit",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "rebuild": "electron-rebuild -f -w yencode",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:publish": "npm run build && electron-builder -p always",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@paymoapp/electron-shutdown-handler": "^1.1.2",
    "@thaunknown/yencode": "1.3.2",
    "utp-native": "^2.5.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/fuses": "^2.0.0",
    "@types/node": "^25.0.3",
    "@xhayper/discord-rpc": "^1.3.0",
    "abslink": "^1.1.6",
    "electron": "39.2.7",
    "electron-builder": "^26.0.12",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.3.9",
    "electron-vite": "^5.0.0",
    "eslint-config-standard-universal": "^1.0.9",
    "glob": "^13.0.0",
    "native": "github:hayase-app/native",
    "rollup-plugin-license": "^3.6.0",
    "torrent-client": "github:hayase-app/torrent-client",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-cjs-interop": "^2.3.0"
  }
}
